{
  "hosting": {
    "target": "kaijudev",
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/2048",
        "destination": "/2048.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      }
    ],
    "redirects": [
      {
        "source": "/2048.html",
        "destination": "/2048",
        "type": 301
      },
      {
        "source": "/login.html",
        "destination": "/login",
        "type": 301
      },
      {
        "source": "/",
        "destination": "/2048",
        "type": 301
      }
    ]
  }
}